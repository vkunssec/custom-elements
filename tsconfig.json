{
  "compilerOptions": {
    "target": "ES2015",    
    "module": "ES2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
